# E-Commerce Engine Environment Variables
# Copy this file to .env and fill in your values
# IMPORTANT: Never commit .env file to version control

# Application
APP_NAME=ecommerce-engine
APP_ENV=development

# Database (PostgreSQL)
DB_URL=jdbc:postgresql://localhost:5432/ecommerce
DB_USERNAME=postgres
DB_PASSWORD=your_password_here

# Redis (for token storage, blacklisting, caching)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# JWT Security
JWT_SECRET=your_jwt_secret_key_here_must_be_at_least_32_characters_long
JWT_ISSUER=ecommerce-engine
JWT_ACCESS_EXPIRATION=3600000
JWT_REFRESH_EXPIRATION=604800000
JWT_COOKIE_SECURE=false
JWT_COOKIE_SAMESITE=Strict

# AWS S3 / MinIO
S3_ENDPOINT=http://localhost:9000
S3_ACCESS_KEY=your_access_key
S3_SECRET_KEY=your_secret_key
S3_BUCKET_NAME=ecommerce-assets

# Paystack Payment Gateway (Primary)
PAYSTACK_API_KEY=sk_test_your_key_here
PAYSTACK_SECRET_KEY=your_secret_here

# Hubtel Payment Gateway (Fallback)
HUBTEL_CLIENT_ID=your_client_id_here
HUBTEL_CLIENT_SECRET=your_client_secret_here
HUBTEL_MERCHANT_ACCOUNT_NUMBER=your_merchant_account_number
HUBTEL_API_BASE_URL=https://api.hubtel.com
